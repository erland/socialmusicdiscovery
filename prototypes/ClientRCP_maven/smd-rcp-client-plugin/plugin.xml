<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.socialmusicdiscovery.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="org.socialmusicdiscovery.rcp.Perspective"
            id="org.socialmusicdiscovery.rcp.Perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="smd-rcp-client-plugin.application"
            name="%product.name">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="smdrcp.intro">
      </intro>
      <introProductBinding
            introId="smdrcp.intro"
            productId="smd-rcp-client-plugin.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="smdrcp.intro"
            content="introContent.xml"
            id="smd-rcp.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            content="ext.xml"
            configId="smd-rcp.configId">
      </configExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.socialmusicdiscovery.rcp.views.navigator.NavigatorView"
            id="org.socialmusicdiscovery.rcp.views.NavigatorView"
            name="%view.navigatorname">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.socialmusicdiscovery.rcp.editors.artist.ArtistEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.artist.ArtistEditor"
            name="%editor.artist.name">
      </editor>
      <editor
            class="org.socialmusicdiscovery.rcp.editors.release.ReleaseEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.release.ReleaseEditor"
            name="%editor.release.name">
      </editor>
      <editor
            class="org.socialmusicdiscovery.rcp.editors.recording.RecordingEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.recording.RecordingEditor"
            name="%editor.recording.name">
      </editor>
   </extension>
   <extension
         id="org.socialmusicdiscovery.rcp.prefs"
         name="%preferences.name"
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.socialmusicdiscovery.rcp.prefs.Main"
            class="org.socialmusicdiscovery.rcp.prefs.ServerConnection"
            id="org.socialmusicdiscovery.rcp.prefs.ServerConnection"
            name="%preferences.server.connection.name">
      </page>
      <page
            class="org.socialmusicdiscovery.rcp.prefs.Main"
            id="org.socialmusicdiscovery.rcp.prefs.Main"
            name="%preferences.main.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.socialmusicdiscovery.rcp.prefs.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="%menu.file.label"
               mnemonic="%menu.file.mnemonic">
            <command
                  commandId="org.eclipse.ui.file.refresh"
                  mnemonic="%command.refresh.mnemonic"
                  style="push">
            </command>
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
                  label="%menu.command.edit.label"
                  mnemonic="%menu.command.edit.mnemonic"
                  style="push">
            </command>
            <separator
                  name="edit-close"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  style="push">
            </command>
            <separator
                  name="close-save"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  style="push">
            </command>
            <separator
                  name="beforeExit"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  mnemonic="%command.exit.mnemonic"
                  style="push">
            </command>
         </menu>
         <menu
               id="server"
               label="%menu.server.label"
               mnemonic="%menu.server.mnemonic">
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.LoadDataSource"
                  label="%command.server.connect.label"
                  mnemonic="%command.server.connect.mnemonic"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.UnloadDataSource"
                  label="%command.server.disconnect.label"
                  mnemonic="%command.server.disconnect.mnemonic"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
         </menu>
         <separator
               name="additions"
               visible="false">
         </separator>
         <menu
               id="window"
               label="%menu.window.label"
               mnemonic="%menu.window.mnemonic">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  mnemonic="%command.preferences.mnemonic"
                  style="push">
            </command>
            <separator
                  name="sep1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.newWindow"
                  mnemonic="%command.newWindow.mnemonic"
                  style="push">
            </command>
          </menu>
         <menu
               id="help"
               label="%menu.help.label"
               mnemonic="%menu.help.mnemonic">
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  mnemonic="%command.introAction.mnemonic"
                  style="push">
            </command>
            <separator
                  name="separator"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  mnemonic="%command.aboutAction.mnemonic"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
               label="%popup.command.edit.label"
               mnemonic="%popup.command.edit.mnemonic"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.PlayElement"
               label="%popup.command.play.label"
               mnemonic="%popup.command.play.mnemonic"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <instanceof
                     value="org.socialmusicdiscovery.server.business.model.core.PlayableElement">
               </instanceof>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.socialmusicdiscovery.rcp.commands.LoadDataSource"
            name="Connect Data Source">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.UnloadDataSource"
            name="Disconnect Data Source">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.PlayElement"
            name="Play">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
            name="Edit">
      </command>
   </extension>
   <extension
          point="org.eclipse.ui.handlers">
      <handler
            class="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
            commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor">
          <enabledWhen>
                <iterate>
                  <instanceof
                        value="org.socialmusicdiscovery.rcp.content.ObservableEntity">
                  </instanceof>
               </iterate>
         </enabledWhen>
      </handler>
     <handler
            class="org.socialmusicdiscovery.rcp.commands.PlayElement"
            commandId="org.socialmusicdiscovery.rcp.commands.PlayElement">
          <enabledWhen>
                <iterate>
                  <instanceof
                        value="org.socialmusicdiscovery.server.business.model.core.PlayableElement">
                  </instanceof>
               </iterate>
         </enabledWhen>
      </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.LoadDataSource"
           commandId="org.socialmusicdiscovery.rcp.commands.LoadDataSource">
     </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.UnloadDataSource"
           commandId="org.socialmusicdiscovery.rcp.commands.UnloadDataSource">
     </handler>
   </extension>

</plugin>
