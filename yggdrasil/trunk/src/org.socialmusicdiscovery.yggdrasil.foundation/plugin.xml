<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="org.socialmusicdiscovery.rcp.Perspective"
            id="org.socialmusicdiscovery.rcp.Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.socialmusicdiscovery.rcp.views.navigator.NavigatorView"
            id="org.socialmusicdiscovery.rcp.views.NavigatorView"
            name="%view.navigatorname">
      </view>
       <view
             category="org.eclipse.ui"
             class="org.eclipse.ui.ExtensionFactory:progressView"
             icon="icons/strawman/progress.png"
             id="org.eclipse.ui.views.ProgressView"
             name="Progress View">
         </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.socialmusicdiscovery.rcp.editors.artist.ArtistEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.artist.ArtistEditor"
            name="%editor.artist.name">
      </editor>
      <editor
            class="org.socialmusicdiscovery.rcp.editors.release.ReleaseEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.release.ReleaseEditor"
            name="%editor.release.name">
      </editor>
      <editor
            class="org.socialmusicdiscovery.rcp.editors.recording.RecordingEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.recording.RecordingEditor"
            name="%editor.recording.name">
      </editor>
      <editor
            class="org.socialmusicdiscovery.rcp.editors.label.LabelEditor"
            default="false"
            id="org.socialmusicdiscovery.rcp.editors.label.LabelEditor"
            name="%editor.label.name">
      </editor>
   </extension>
   <extension
         id="org.socialmusicdiscovery.rcp.prefs"
         name="%preferences.name"
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.socialmusicdiscovery.rcp.prefs.Main"
            class="org.socialmusicdiscovery.rcp.prefs.ServerConnection"
            id="org.socialmusicdiscovery.rcp.prefs.ServerConnection"
            name="%preferences.server.connection.name">
      </page>
      <page
            class="org.socialmusicdiscovery.rcp.prefs.Main"
            id="org.socialmusicdiscovery.rcp.prefs.Main"
            name="%preferences.main.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.socialmusicdiscovery.rcp.prefs.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="%menu.file.label"
               mnemonic="%menu.file.mnemonic">
            <command
                  commandId="org.eclipse.ui.file.refresh"
                  mnemonic="%command.refresh.mnemonic"
                  style="push">
            </command>
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
                  label="%menu.command.edit.label"
                  mnemonic="%menu.command.edit.mnemonic"
                  style="push">
            </command>
            <separator
                  name="edit-close"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  style="push">
            </command>
            <separator
                  name="close-save"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  style="push">
            </command>
            <separator
                  name="beforeExit"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  mnemonic="%command.exit.mnemonic"
                  style="push">
            </command>
         </menu>
         <menu
               id="server"
               label="%menu.server.label"
               mnemonic="%menu.server.mnemonic">
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.ConnectDataSource"
                  label="%command.server.connect.label"
                  mnemonic="%command.server.connect.mnemonic"
                  style="push"
                  tooltip="Connect to server according to server preferences.">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.DisconnectDataSource"
                  label="%command.server.disconnect.label"
                  mnemonic="%command.server.disconnect.mnemonic"
                  style="push"
                  tooltip="Disconnect from server. Note: if set to &quot;auto-connect&quot;, a new connection to the server will be made immeditely. If server settings have changed in between, the new connection will be made to changed settings.">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="org.socialmusicdiscovery.rcp.commands.ImportFromSBS"
                  label="%command.server.import.sbs.label"
                  mnemonic="%command.server.import.sbs.mnemonic"
                  style="push"
                  tooltip="Import files and metadata from SqueezeBox Server">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
         </menu>
         <separator
               name="additions"
               visible="false">
         </separator>
         <menu
               id="window"
               label="%menu.window.label"
               mnemonic="%menu.window.mnemonic">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  mnemonic="%command.preferences.mnemonic"
                  style="push">
            </command>
            <separator
                  name="sep1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.newWindow"
                  mnemonic="%command.newWindow.mnemonic"
                  style="push">
            </command>
          </menu>
         <menu
               id="help"
               label="%menu.help.label"
               mnemonic="%menu.help.mnemonic">
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  mnemonic="%command.introAction.mnemonic"
                  style="push">
            </command>
            <separator
                  name="separator"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  mnemonic="%command.aboutAction.mnemonic"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.Create"
               label="%popup.command.create.label"
               mnemonic="%popup.command.create.mnemonic"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.Delete"
               label="%popup.command.delete.label"
               mnemonic="%popup.command.delete.mnemonic"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
               label="%popup.command.edit.label"
               mnemonic="%popup.command.edit.mnemonic"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="org.socialmusicdiscovery.rcp.editors.artist.ArtistEditor">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.PlayElement"
               label="%popup.command.play.label"
               mnemonic="%popup.command.play.mnemonic"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <instanceof
                     value="org.socialmusicdiscovery.server.business.model.core.PlayableElement">
               </instanceof>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.socialmusicdiscovery.rcp.editors.widgets.ContributorPanel">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.CreateContributor"
               label="%popup.command.createDependent.label"
               mnemonic="%popup.command.createDependent.mnemonic"
               style="push">
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.DeleteDependent"
               label="%popup.command.delete.label"
               mnemonic="%popup.command.delete.mnemonic"
               style="push">
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.EditArtist"
               label="%popup.command.editArtist.label"
               mnemonic="%popup.command.editArtist.mnemonic"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.socialmusicdiscovery.rcp.editors.release.ReleaseEditor.tracks">
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.CreateTrack"
               label="%popup.command.createDependent.label"
               mnemonic="%popup.command.createDependent.mnemonic"
               style="push">
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.DeleteDependent"
               label="%popup.command.delete.label"
               mnemonic="%popup.command.delete.mnemonic"
               style="push">
         </command>
         <command
               commandId="org.socialmusicdiscovery.rcp.commands.EditRecording"
               label="%popup.command.editRecording.label"
               mnemonic="%popup.command.editRecording.mnemonic"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.socialmusicdiscovery.rcp.commands.ConnectDataSource"
            name="Connect Data Source">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.Create"
            name="Create">
      </command>
      <command
            defaultHandler="org.socialmusicdiscovery.rcp.commands.CreateContributor"
            id="org.socialmusicdiscovery.rcp.commands.CreateContributor"
            name="Create Contributor">
      </command>
      <command
            defaultHandler="org.socialmusicdiscovery.rcp.commands.CreateTrack"
            id="org.socialmusicdiscovery.rcp.commands.CreateTrack"
            name="Create Track">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.Delete"
            name="Delete">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.DeleteDependent"
            name="Delete Dependent">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.DisconnectDataSource"
            name="Disconnect Data Source">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
            name="Edit">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.ImportFromSBS"
            name="Import SBS">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.PlayElement"
            name="Play">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.EditRecording"
            name="Edit Recording">
      </command>
      <command
            id="org.socialmusicdiscovery.rcp.commands.EditArtist"
            name="Edit Artist">
      </command>
   </extension>
   <extension
          point="org.eclipse.ui.handlers">
      <handler
            class="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor"
            commandId="org.socialmusicdiscovery.rcp.commands.OpenEntityEditor">
          <enabledWhen>
                <iterate
                      ifEmpty="false">
                  <instanceof
                        value="org.socialmusicdiscovery.rcp.content.ObservableEntity">
                  </instanceof>
               </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.socialmusicdiscovery.rcp.commands.Delete"
            commandId="org.socialmusicdiscovery.rcp.commands.Delete">
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="org.socialmusicdiscovery.rcp.content.Deletable">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.socialmusicdiscovery.rcp.commands.DeleteDependent"
            commandId="org.socialmusicdiscovery.rcp.commands.DeleteDependent">
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="org.socialmusicdiscovery.rcp.content.AbstractDependentEntity">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.socialmusicdiscovery.rcp.commands.Create"
            commandId="org.socialmusicdiscovery.rcp.commands.Create">
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="org.socialmusicdiscovery.rcp.content.ItemFactory">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
     <handler
            class="org.socialmusicdiscovery.rcp.commands.PlayElement"
            commandId="org.socialmusicdiscovery.rcp.commands.PlayElement">
          <enabledWhen>
                <iterate
                      ifEmpty="false">
                  <instanceof
                        value="org.socialmusicdiscovery.server.business.model.core.PlayableElement">
                  </instanceof>
               </iterate>
         </enabledWhen>
      </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.ConnectDataSource"
           commandId="org.socialmusicdiscovery.rcp.commands.ConnectDataSource">
     </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.DisconnectDataSource"
           commandId="org.socialmusicdiscovery.rcp.commands.DisconnectDataSource">
     </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.ImportFromSBS"
           commandId="org.socialmusicdiscovery.rcp.commands.ImportFromSBS">
     </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.OpenRecordingEditor"
           commandId="org.socialmusicdiscovery.rcp.commands.EditRecording">
        <enabledWhen>
           <iterate
                 ifEmpty="false">
              <instanceof
                    value="org.socialmusicdiscovery.server.business.model.core.Track">
              </instanceof>
           </iterate>
        </enabledWhen>
     </handler>
     <handler
           class="org.socialmusicdiscovery.rcp.commands.OpenArtistEditor"
           commandId="org.socialmusicdiscovery.rcp.commands.EditArtist">
        <enabledWhen>
           <iterate
                 ifEmpty="false">
              <instanceof
                    value="org.socialmusicdiscovery.server.business.model.core.Contributor">
              </instanceof>
           </iterate>
        </enabledWhen>
     </handler>
   </extension>

</plugin>
